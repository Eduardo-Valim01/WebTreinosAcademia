@model WebTreinosAcademia.Models.Treino

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Treino</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="nometreino" class="control-label"></label>
                <input asp-for="nometreino" class="form-control" />
                <span asp-validation-for="nometreino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descricaotreino" class="control-label"></label>
                <input asp-for="descricaotreino" class="form-control" />
                <span asp-validation-for="descricaotreino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="duracao" class="control-label"></label>
                <input asp-for="duracao" class="form-control" />
                <span asp-validation-for="duracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dificuldade" class="control-label"></label>
                <input asp-for="dificuldade" class="form-control" />
                <span asp-validation-for="dificuldade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="professorResp" class="control-label"></label>
                <input asp-for="professorResp" class="form-control" />
                <span asp-validation-for="professorResp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
