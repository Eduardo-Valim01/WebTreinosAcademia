@model IEnumerable<WebTreinosAcademia.Models.Treino>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dados do Treino</h1>

<p>
    <a asp-action="Create">Inserir Treinos</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nometreino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descricaotreino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.duracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dificuldade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.professorResp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nometreino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricaotreino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duracao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dificuldade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.professorResp)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.id"><input type="submit" value="Editar" class="btn btn-primary bg-warning text-dark border-0" /></a> |
                    <a asp-action="Details" asp-route-id="@item.id"><input type="submit" value="Detalhar" class="btn btn-primary border-0" /></a> |
                    <a asp-action="Delete" asp-route-id="@item.id"><input type="submit" value="Excluir" class="btn btn-primary bg-danger border-0" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
